                                                        <div class="form-group row">
                                                            <label asp-for="TimeZoneIanaId" class="col-sm-2 col-form-label">@localizer["Time zone"]</label>
                                                            <div class="col-sm-10">
                                                                <select asp-for="TimeZoneIanaId" class="form-control" style="max-width:100%;text-overflow:ellipsis;">
                                                                    @foreach (TimeZoneInfo systemTimeZone in TimeZoneInfo.GetSystemTimeZones())
